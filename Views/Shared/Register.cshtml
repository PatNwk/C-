@{
    ViewData["Title"] = "Inscription";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Fond global */
        body {
            display: flex;
            flex-direction: column;
            height: 100vh;
            margin: 0;
            padding: 0;
            background: linear-gradient(to bottom left, rgb(240,237,246) 0%, rgb(198,199,232) 100%);
            color: black;
            font-family: 'Poppins', sans-serif;
        }

        /* Conteneur principal */
        .container {
            flex: 1;
            max-width: 600px;
            margin: 0 auto;
            padding: 40px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            margin-top: 50px; /* Espace au-dessus */ 
            margin-bottom: 50px; /* Espace en bas */
        }

        h1 {
            font-size: 2.5rem;
            color: rgb(73, 74, 112);
            text-align: center;
            margin-bottom: 30px;
        }

        .form-label {
            font-weight: bold;
            color: #555;
        }

        .form-control {
            border-radius: 10px;
            padding: 15px;
            font-size: 1rem;
            margin-bottom: 20px;
            border: 1px solid #ddd;
        }

        .btn-primary {
            background-color: rgb(73, 74, 112);
            color: white;
            border: none;
            padding: 10px 25px;
            font-size: 1rem;
            border-radius: 25px;
            transition: transform 0.3s ease, background 0.3s ease;
            width: 100%;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                background: rgb(50, 50, 100);
            }

        .alert {
            margin-top: 20px;
        }

        /* Footer */
        footer {
            background: rgb(240,237,246);
            color: rgb(240,237,246);
            text-align: center;
            padding: 20px;
            margin-top: 30px;
            font-size: 0.9rem;
        }

            footer a {
                color: #00FFAB;
                text-decoration: none;
                font-weight: bold;
                transition: color 0.3s ease;
            }

                footer a:hover {
                    color: rgb(240,237,246);
                }

        /* Bouton retour à l'index */
        .btn-back {
            background-color: transparent;
            border: 2px solid rgb(73, 74, 112);
            color: rgb(73, 74, 112);
            font-size: 1rem;
            border-radius: 25px;
            padding: 10px 25px;
            display: block;
            width: 100%;
            margin-top: 20px;
            text-align: center;
        }

            .btn-back:hover {
                background-color: rgb(73, 74, 112);
                color: white;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Inscription</h1>
        <form asp-action="RegisterPost" method="post" class="mt-4">
            <div class="mb-3">
                <label for="username" class="form-label">Nom d'utilisateur</label>
                <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <button type="submit" class="btn btn-primary">S'inscrire</button>
        </form>

        @if (ViewData["Error"] != null)
        {
            <div class="alert alert-danger mt-3">@ViewData["Error"]</div>
        }

        <!-- Bouton retour à l'index -->
        <a href="/Home/Index" class="btn-back">Retour à l'accueil</a>
    </div>

</body>
</html>
