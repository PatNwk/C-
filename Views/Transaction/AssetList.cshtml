@model List<MonWebApp.Models.Asset>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Liste des Actifs</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        /* Fond global */
        body {
            display: flex;
            flex-direction: column;
            height: 100vh;
            margin: 0;
            padding: 0;
            background: linear-gradient(to bottom left, rgb(240,237,246) 0%, rgb(198,199,232) 100%);
            color: black;
            font-family: 'Poppins', sans-serif;
        }

        /* Navbar */
        .navbar {
            background-color: transparent;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 40px;
            box-shadow: inset 0 10px 10px rgba(255, 255, 255, 0.3);
            margin-top: 2%;
            margin-right: 5%;
            margin-left: 5%;
            border-radius: 30px;
            border: 2px solid rgba(225, 226, 246, 0.5);
        }

            .navbar .navbar-brand {
                color: rgb(73, 74, 112);
                font-weight: bold;
                font-size: 1.8rem;
                text-transform: uppercase;
                transition: transform 0.3s ease, color 0.3s ease;
            }

                .navbar .navbar-brand:hover {
                    transform: scale(1.1);
                    color: rgb(73, 74, 112);
                }

            .navbar .nav-links {
                display: flex;
                gap: 20px;
            }

            .navbar .nav-link {
                color: rgb(73, 74, 112);
                font-size: 1rem;
                text-transform: uppercase;
                font-weight: 500;
                letter-spacing: 0.05em;
                text-decoration: none;
                transition: color 0.3s ease, transform 0.3s ease;
            }

                .navbar .nav-link:hover {
                    color: rgb(73, 74, 112);
                    transform: scale(1.05);
                }

            .navbar .button {
                background: white;
                color: #121212;
                border: none;
                border-radius: 50px;
                padding: 10px 25px;
                font-size: 1rem;
                font-weight: bold;
                text-transform: uppercase;
                cursor: pointer;
                transition: transform 0.3s ease, background 0.3s ease;
            }

                .navbar .button:hover {
                    transform: translateY(-2px);
                    background: white;
                }

        /* Conteneur principal */
        .container {
            flex: 1;
            max-width: 900px;
            margin: 40px auto;
            padding: 40px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        h2 {
            font-size: 2rem;
            color: rgb(73, 74, 112);
            text-align: center;
            margin-bottom: 30px;
        }

        .form-group label {
            font-weight: bold;
            color: #555;
        }

        .form-control {
            border-radius: 10px;
            padding: 15px;
            font-size: 1rem;
            margin-bottom: 20px;
            border: 1px solid #ddd;
        }

        .btn-primary {
            background-color: rgb(73, 74, 112);
            color: white;
            border: none;
            padding: 10px 25px;
            font-size: 1rem;
            border-radius: 25px;
            transition: transform 0.3s ease, background 0.3s ease;
            width: 100%;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                background: rgb(50, 50, 100);
            }

        #message {
            margin-top: 20px;
        }

        /* Footer */
        footer {
            background: rgb(240,237,246);
            color: #B3B3B3;
            text-align: center;
            padding: 20px;
            margin-top: 30px;
            font-size: 0.9rem;
        }

            footer a {
                color: black;
                text-decoration: none;
                font-weight: bold;
                transition: color 0.3s ease;
            }

                footer a:hover {
                    color: rgb(240,237,246);
                }
    </style>
</head>
<body>
    

    <!-- Contenu principal -->
    <div class="container">
        <h2>Liste des Actifs</h2>

        @if (!Model.Any())
        {
            <p>Aucun actif disponible pour le moment.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        
                        <th>Prix</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var asset in Model)
                    {
                        <tr>
                            <td>@asset.Name</td>
                            
                            <td>@asset.Price</td>
                            <td>
                                <form asp-action="BuyAsset" method="post">
                                    <input type="hidden" name="assetId" value="@asset.AssetId" />
                                    <input type="number" name="quantity" min="1" required />
                                    <button type="submit" class="btn btn-primary">Acheter</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <a class="btn btn-primary" href="/Home/Index">Retour à l'accueil</a>
        }
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 MonWebApp. Tous droits réservés. <a href="/Contact">Contactez-nous</a></p>
    </footer>
</body>
</html>
